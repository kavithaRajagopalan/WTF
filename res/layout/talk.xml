<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer" android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long Press to start and Click to stop"
            android:id="@+id/instruction" android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_above="@id/chronometer"
            android:layout_marginTop="50dip"/>

    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Stop"
            android:textOff="Start"
            android:id="@+id/play_reset_button"
            android:onClick="togglePlayReset"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:layout_below="@id/chronometer"/>

</RelativeLayout>